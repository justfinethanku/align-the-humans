# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/qvzfcezbuzmvglgiolmh/settings/api

# Project URL (format: https://[project-ref].supabase.co)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url

# Anon/Public Key (client-safe, used in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Service Role Key (server-only, NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Direct PostgreSQL connection string for Drizzle ORM
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=your_database_url

# AI Configuration
# Vercel AI Gateway API Key
AI_GATEWAY_API_KEY=your_vercel_ai_gateway_key

# Email (Resend)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key

# App URL (used for email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Invite Token Encryption Secret
INVITE_TOKEN_SECRET=replace-with-a-long-random-string

# Supabase Auth Hook Secret (for email webhook verification)
SUPABASE_AUTH_HOOK_SECRET=your_auth_hook_secret
